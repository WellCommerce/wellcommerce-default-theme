{% trans_default_domain "wellcommerce" %}
{% import "WellCommerceAppBundle:Front/Form:macros.html.twig" as macros %}
<div>
    {{ macros.form_begin(form, 'contact') }}
    <div class="form-group">
        {{ macros.element(form.getChildren().get('name')) }}
    </div>
    <div class="form-group">
        {{ macros.element(form.getChildren().get('surname')) }}
    </div>
    <div class="form-group">
        {{ macros.element(form.getChildren().get('email')) }}
    </div>
    <div class="form-group">
        {{ macros.element(form.getChildren().get('phone')) }}
    </div>
    <div class="form-group">
        {{ macros.element(form.getChildren().get('subject')) }}
    </div>
    <div class="form-group">
        {{ macros.element(form.getChildren().get('content')) }}
    </div>
    <div class="form-group">
        {{ recaptcha() }}
    </div>
    <button type="submit" class="btn btn-lg btn-primary">Wy≈õlij</button>
    {{ macros.form_end(form) }}
</div>
