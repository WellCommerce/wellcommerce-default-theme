{% trans_default_domain "wellcommerce" %}
<div class="well-form mbt60">
    {% if orders.count == 0 %}
        <div class="alert alert-info" role="alert">
            {% trans %}order.notice.empty_order_list{% endtrans %}
        </div>
    {% else %}
    <div class="table-responsive">
        <table class="table orders-table">
            <thead>
            <tr>
                <th>#</th>
                <th>{% trans %}order.label.created_at{% endtrans %}</th>
                <th>{% trans %}order.label.order_total{% endtrans %}</th>
                <th>{% trans %}order.label.payment_method{% endtrans %}</th>
                <th>{% trans %}order.label.current_status{% endtrans %}</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.createdAt|date }}</td>
                <td><strong>{{ format_price(order.summary.grossAmount, order.currency, order.currency) }}</strong></td>
                <td>{{ order.paymentMethod.translate.name }}</td>
                <td>{{ order.currentStatus.translate.name }}</td>
                <td>
                    <a href="{{ path('front.client_order.view',{"id": order.id}) }}" class="btn btn-link btn-light">{% trans %}order.link.view_order{% endtrans %}</a>
                    <a href="{{ path('front.client_order.repeat',{"id": order.id}) }}" class="btn btn-link btn-light">{% trans %}order.link.repeat_order{% endtrans %}</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
</div>

